{
  "version": 3,
  "configurePresets": [
    {
      "name": "vs2019",
      "displayName": "游댯 Visual Studio 2019 (x64)",
      "description": "Genera soluci칩n .sln para Visual Studio 2019 (x64).",
      "generator": "Visual Studio 16 2019",
      "binaryDir": "${sourceDir}/_build/vs2019",
      "architecture": "x64"
    },
    {
      "name": "vs2022",
      "displayName": "游릭 Visual Studio 2022 (x64)",
      "description": "Genera soluci칩n .sln para Visual Studio 2022 (x64).",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/_build/vs2022",
      "architecture": "x64"
    },
    {
      "name": "vs2026",
      "displayName": "游릮 Visual Studio 2026 (x64)",
      "description": "Genera soluci칩n .sln para Visual Studio 2026 (x64).",
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/_build/vs2026",
      "architecture": "x64"
    },
    {
      "name": "mingw64",
      "displayName": "游리 MinGW-x64",
      "description": "Build en Windows con MinGW-w64. Revisar MINGW_PATH en preset.",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/_build/mingw64",
      "toolchainFile": "toolchains/mingw-mingw64.cmake",
        "cacheVariables": {
            "CMAKE_CXX_FLAGS": "-g -Werror -Wall -Wextra -Wpedantic -Wshadow -Wuninitialized -Wformat",
        "CMAKE_BUILD_TYPE":"mingw64",
        "MINGW_PATH": "$env{MINGW_PATH}",
        "MINGW_BIN": "$env{MINGW_PATH}/bin"
        },
      "environment": {
        "MINGW_PATH": "C:/msys64/mingw64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "mingw64",
      "displayName": "游빘 Mingw64",
      "configurePreset": "mingw64",
      "targets": [ "all" ],
      "jobs": 4,
      "environment": {
        "PATH": "$env{MINGW_PATH}/bin;$penv{PATH}"
      },
      "cleanFirst": true
    },

    {
      "name": "vs2019-release",
      "displayName": "游 VS2019 Release (x64)",
      "configurePreset": "vs2019",
      "configuration": "Release"
    },
    {
      "name": "vs2019-debug",
      "displayName": "游 VS2019 Debug (x64)",
      "configurePreset": "vs2019",
      "configuration": "Debug"
    },
    {
      "name": "vs2019-relwithdebinfo",
      "displayName": "游댌 VS2019 RelWithDebInfo (x64)",
      "configurePreset": "vs2019",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "vs2019-minsizerel",
      "displayName": "游닍 VS2019 MinSizeRel (x64)",
      "configurePreset": "vs2019",
      "configuration": "MinSizeRel"
    },

    {
      "name": "vs2022-release",
      "displayName": "游 VS2022 Release (x64)",
      "configurePreset": "vs2022",
      "configuration": "Release"
    },
    {
      "name": "vs2022-debug",
      "displayName": "游 VS2022 Debug (x64)",
      "configurePreset": "vs2022",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-relwithdebinfo",
      "displayName": "游댌 VS2022 RelWithDebInfo (x64)",
      "configurePreset": "vs2022",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "vs2022-minsizerel",
      "displayName": "游닍 VS2022 MinSizeRel (x64)",
      "configurePreset": "vs2022",
      "configuration": "MinSizeRel"
    },

    {
      "name": "vs2026-release",
      "displayName": "游 VS2026 Release (x64)",
      "configurePreset": "vs2026",
      "configuration": "Release"
    },
    {
      "name": "vs2026-debug",
      "displayName": "游 VS2026 Debug (x64)",
      "configurePreset": "vs2026",
      "configuration": "Debug"
    },
    {
      "name": "vs2026-relwithdebinfo",
      "displayName": "游댌 VS2026 RelWithDebInfo (x64)",
      "configurePreset": "vs2026",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "vs2026-minsizerel",
      "displayName": "游닍 VS2026 MinSizeRel (x64)",
      "configurePreset": "vs2026",
      "configuration": "MinSizeRel"
    }
  ]
}
