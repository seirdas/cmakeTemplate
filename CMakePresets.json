{
  "version": 4,
  "configurePresets": [
    {
      "name": "vs2019",
      "displayName": "Visual Studio 2019 (x64)",
      "description": "Genera solución .sln para Visual Studio 2019 (x64).",
      "generator": "Visual Studio 16 2019",
      "binaryDir": "${sourceDir}/solutions/vs2019",
      "architecture": "x64"
    },
    {
      "name": "vs2022",
      "displayName": "Visual Studio 2022 (x64)",
      "description": "Genera solución .sln para Visual Studio 2022 (x64).",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/solutions/vs2022",
      "architecture": "x64"
    },
    {
      "name": "vs2026",
      "displayName": "Visual Studio 2026 (x64)",
      "description": "Genera solución .sln para Visual Studio 2026 (x64).",
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/solutions/vs2026",
      "architecture": "x64"
    },
    {
      "name": "ninja-windows-mingw64",
      "displayName": "Ninja Windows (MinGW-w64 classic)",
      "description": "Build en Windows con MinGW-w64 (mingw64).",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/solutions/ninja-windows-mingw64",
      "toolchainFile": "toolchains/mingw-mingw64.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-mingw64-debug",
      "displayName": "Mingw64 Debug",
      "configurePreset": "ninja-windows-mingw64",
      "configuration": "Debug"
    },
    {
      "name": "windows-mingw64-release",
      "displayName": "Mingw64 Release",
      "configurePreset": "ninja-windows-mingw64",
      "configuration": "Release"
    },
    {
      "name": "vs2019-debug",
      "displayName": "VS2019 Debug (x64)",
      "configurePreset": "vs2019",
      "configuration": "Debug"
    },
    {
      "name": "vs2019-release",
      "displayName": "VS2019 Release (x64)",
      "configurePreset": "vs2019",
      "configuration": "Release"
    },
    {
      "name": "vs2022-debug",
      "displayName": "VS2022 Debug (x64)",
      "configurePreset": "vs2022",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-release",
      "displayName": "VS2022 Release (x64)",
      "configurePreset": "vs2022",
      "configuration": "Release"
    },
    {
      "name": "vs2026-debug",
      "displayName": "VS2026 Debug (x64)",
      "configurePreset": "vs2026",
      "configuration": "Debug"
    },
    {
      "name": "vs2026-release",
      "displayName": "VS2026 Release (x64)",
      "configurePreset": "vs2026",
      "configuration": "Release"
    }
  ]
}
