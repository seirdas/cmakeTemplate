{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\build\\${command:cmake.activeConfigurePresetName}",
        "--config",
        "${command:cmake.buildType}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"],
      "detail": "Construye el proyecto usando CMake Tools"
    },
    {
      "label": "CMake: configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--preset",
        "${command:cmake.activeConfigurePresetName}"
      ],
      "problemMatcher": ["$msCompile"],
      "detail": "Configura el proyecto"
    }
  ]
}