{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\build\\${command:cmake.activeConfigurePresetName}",
        "--config",
        "${command:cmake.buildType}",
        "--parallel",
        "4"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH":"${config:mingw.binPath};${env:PATH}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"],
      "detail": "Construye el proyecto usando CMake Tools"
    }
  ]
}