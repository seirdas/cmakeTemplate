{
  "version": "0.2.0",
  "configurations": [

    // Configuraci贸n para depuraci贸n con MSVC (Compiladores de Visual Studio)
    {
      "name": " MSVC",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.getLaunchTargetPath}",
      "preLaunchTask": "CMake: build",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },

    // Configuraci贸n para depuraci贸n con GDB (Compiladores como MinGW o GCC en MSYS2)
    {
      "name": " GDB (MinGW)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.getLaunchTargetPath}",
      "preLaunchTask": "CMake: build", 
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "${config:mingw.binPath}/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
        }
      ],
      "environment": [
        {
          "name": "PATH",
          "value": "${config:mingw.binPath};$env{PATH}"
        }
      ]
    },

     // Configuraci贸n para depuraci贸n con Clang (usando LLDB como depurador)
    {
      "name": " LLDB (Clang)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.getLaunchTargetPath}",
      "preLaunchTask": "CMake: build", 
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "lldb",
      "miDebuggerPath": "${config:clang.binPath}/lldb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for lldb",
          "text": "-enable-pretty-printing",
        }
      ],
      "environment": [
        {
          "name": "PATH",
          "value": "${config:clang.binPath};$env{PATH}"
        }
      ]
    }
  ]
}