{
  "version": "0.2.0",
  "configurations": [

    // Configuraci贸n para depuraci贸n con MSVC (Compiladores de Visual Studio)
    {
      "name": " MSVC",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "preLaunchTask": "CMake: build",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },

    // Configuraci贸n para depuraci贸n con MSYS y GDB (Compiladores como MinGW o GCC en MSYS2)
    {
      "name": " MSYS",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "preLaunchTask": "CMake: build", 
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
        }
      ],

      // Ruta de debugger para cada SO
      "windows": {
        "miDebuggerPath": "${workspaceFolder}/debugger/gdb.exe",
        "MIMode": "gdb"
      },
      "linux": {
        "miDebuggerPath": "/usr/bin/gdb",
        "MIMode": "gdb"
      },
      "osx": {
        "miDebuggerPath": "/usr/bin/lldb",
        "MIMode": "lldb"
      }
    }
  ]
}