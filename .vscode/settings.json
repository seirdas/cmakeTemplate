{

    // Custom paths for visual studio code launch
    "mingw.binPath": "C:/msys64/mingw64/bin",

    // No se pueden poner comentarios en la generación manual por comandos
    "cmake.allowCommentsInPresetsFile": false,

    // Cambiar si cmake está instalado en otro sitio
    "cmake.cmakePath": "cmake",
    "cmake.buildBeforeRun": true,
    "cmake.parallelJobs": 4,

    // Opciones de visualización en vscode de cmake
    "cmake.options.statusBarVisibility": "compact",
    "cmake.options.advanced": { 
        "ctest": { 
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "hidden"
        },
        "testPreset": { 
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "hidden"
        },
        "kit": { 
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "hidden"
        }, 
        "variant": { 
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "hidden"
        }, 
        "workflow": {
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "hidden"
        },
        "workflowPreset": {
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "hidden"
        },
        "cpack": {
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "hidden"
        },
        "packagePreset": {
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "hidden"
        }
    },

    
    // Otras configuraciones
    "telemetry.enableTelemetry": false,
    "telemetry.telemetryLevel": "off",
    "telemetry.editStats.details.enabled": false,
    "telemetry.editStats.showDecorations": false,
    "telemetry.editStats.enabled": false,
    "telemetry.editStats.showStatusBar": false,
    "telemetry.feedback.enabled": false,
    "editor.mouseWheelZoom": true,
}